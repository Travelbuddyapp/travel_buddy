<div class="row">
  <div class="col s12 l4 offset-l4 new-trip-link" >
    <div class="card-panel hoverable teal accent-2">
      <div class="center-align">
        <i class="fa fa-plus fa-2x"></i><br>
        Create New Trip
      </div>
    </div>
  </div>
</div>

<div class="row">
  <% if @trips != nil %>
    <% @trips.each do |f| %>
      <div class="col s12 m6 show-trip-link" data-trip-id='<%= f[:id] %>'>
        <div class="card small hoverable">
          <div class="card-image">
            <%= image_tag src="MapWPins.jpg" %>
            <span class="card-title black-text"><%= f.name %></span>
          </div>
          <div class="card-content">
            <p class="flow-text">Start date: <%= f.start_date %><p>
            <p class="flow-text">End date: <%= f.end_date %><p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>