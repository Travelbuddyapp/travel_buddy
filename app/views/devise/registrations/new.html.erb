<h2 class="center-align">Register</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {multipart: true}) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
    <div class="input-field col s12 m6">
      <%= f.text_field :first_name, autofocus: true %>
      <%= f.label :first_name %>
    </div>

    <div class="input-field col s12 m6">
      <%= f.text_field :last_name %>
      <%= f.label :last_name %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12 m6">
      <%= f.label :birth_date %>
      <%= f.date_field :birth_date, class: "datepicker" %>
    </div>
    
    <div class="input-field col s12 m6">
      <%= f.number_field :phone_number %>
      <%= f.label :phone_number %>
    </div>
  </div>

  <div class="input-field">
    <%= f.email_field :email %>
    <%= f.label :email %><br />
  </div>

  <div class="input-field">
    <%= f.password_field :password, autocomplete: "off" %>
    <%= f.label :password %>
  </div>

  <div class="input-field">
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
    <%= f.label :password_confirmation %>
  </div>

<div class="row">
  <div class="file-field input-field col s12 m8">
    <div class="btn">
      <span>Avatar</span>
      <input type="file" name="user[avatar]" id="user_avatar">
    </div>
    <div class="file-path-wrapper">
      <input class="file-path validate" type="text">
    </div>
  </div>

  <div class="input-field center-align col s12 m4">
    <%= f.radio_button :gender, id = "Male" %>
    <label for="user_gender_male"> Male </label>
    <%= f.radio_button :gender, id = "Female" %>
    <label for="user_gender_female"> Female </label>
  </div>
</div>
  <div class="input-field center-align">
    <input type="submit" class="btn" value="Register">
  </div>
<% end %>

<%= render "devise/shared/links" %>
