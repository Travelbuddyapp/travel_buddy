<h1>Trips#show</h1>
Shows only 1 trip<br>
<%= link_to 'back', trips_path %>
<div class="row">
  <div class="col s12 m6 l10">
    <div class="card">
    <div class="container">
      Name: <%= @trip.name %><br>
      Description: <%= @trip.description %><br>
      Start Date: <%= @trip.start_date %><br>
      End Date: <%= @trip.end_date %><br>
      Emergency Contact: <%= @trip.ice_name %><br>
      <div class="card-action">
        <%= link_to "Edit", edit_trip_path(@trip) %>
        <%= link_to 'Delete', trip_path(@trip), data: {:confirm => 'Are you sure?'}, :method => :delete %>
      </div>
      </div>
    </div>
  </div>
</div>

<ul class="collapsible popout" data-collapsible="accordion">
<% if @reservations.any? %>
  <% @reservations.each do |reservation| %>
    <li>
      <div class="collapsible-header"><i class="material-icons">filter_drama</i>
        <%= reservation.business_name %>
      </div>
      <div class="collapsible-body">
        Type: <%= reservation.type %><br>
        Confirmation # <%= reservation.confirmation_number %><br>
        Check in Date: <%= reservation.check_in_date %><br>
        Check out Date: <%= reservation.check_out_date %><br>
        Note: <%= reservation.note %><br>
        <%= link_to 'Edit', sti_reservation_path(@trip, reservation.type, reservation, :edit) %>
        <%= link_to 'Destroy', sti_reservation_path(@trip, reservation.type, reservation), method: :delete, data: {confirm: 'Are you sure?' } %>
      </div>
    </li>
  <% end %>
<% end %>
</ul>

<div class="row">
  <div class="col s12">
    <ul class="tabs">
      <li class="tab col s12 m3">
        <a href="#checklists">
          <i class="fa fa-list">
            <div class="hide-on-med-and-down inline">
              Checklists
            </div>
          </i>
        </a>
      </li>
      <li class="tab col s12 m3">
        <a href="#reservations">
          <i class="fa fa-calendar">
            <div class="hide-on-med-and-down inline">
              Reservations
            </div>
          </i>
        </a>
      </li>
    </ul>
    <div class="col s12" id="checklists">
    <%= render 'shared/checklists' %>
    </div>
    <div class="col s12" id="reservations">
    <%= render 'shared/reservations' %>
    </div>
  </div>
</div>
