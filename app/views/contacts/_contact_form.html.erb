<%= form_for [current_user, @contact] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :phone_number %>
  <%= f.number_field :phone_number %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :note_field %>
  <%= f.text_field :note_field %>

  <%= f.check_box :ice, {}, true, false %>
  <%= f.label :ice %>
  <br>

  <%= f.submit %>
<% end %>